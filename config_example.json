{
  "common": {
    "bids_folder": "/path/to/bids/dataset",
    "output_folder": "/path/to/output/derivatives",
    "tmp_folder": "/path/to/scratch/space",
    "templateflow_dir": "/path/to/templateflow",
    "container": "/path/to/container/image.sif",
    "optional_folder": "/path/to/extra/data",
    "jobs": 1,
    "pilottest": false
  },
  "app": {
    "analysis_level": "participant",
    "apptainer_args": [
      "--containall",
      "--writable-tmpfs"
    ],
    "options": [
      "--fs-license-file", "/fs/license.txt",
      "--nprocs", "8",
      "--no-b0-harmonization",
      "--skip-bids-validation",
      "--output-resolution", "1.2"
    ],
    "mounts": [
      { "source": "/path/to/freesurfer/license", "target": "/fs" }
    ],
    "output_check": {
      "pattern": "sub-{subject}.html"
    }
  }
}
